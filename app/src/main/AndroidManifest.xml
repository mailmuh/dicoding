<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="Smartphone.com.submission">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hp"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/hp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="Smartphone.com.submission.MainActivity"></activity>
        <activity android:name="Smartphone.com.submission.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Smartphone.com.submission.DetailSmartphone"
            android:parentActivityName="Smartphone.com.submission.MainActivity"/>
        <activity android:name="Smartphone.com.submission.AboutActivity"
            android:parentActivityName="Smartphone.com.submission.MainActivity"></activity>
    </application>

</manifest>